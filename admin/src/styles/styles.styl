@import "~@angular/material/prebuilt-themes/indigo-pink.css"
@require 'palette'

html
  height: 100%

  body
    position: absolute
    width: 100%
    height: 100%
    padding: 0
    margin: 0
    background-color: var_bg_col_0
    background-image: url('../assets/bg.jpg')
    background-size: cover
    background-attachment: fixed
    background-repeat: no-repeat

  .page
    width: 90%
    margin: 0 auto 0 auto
    padding: 20px

  .snackbar
    color: white

    .mat-simple-snackbar-action
      color: white

  .error-snackbar
    background-color: #b00020

  .success-snackbar
    background-color: #3700b3

  .table
    display: table

    .row
      display: table-row
      
      .cell
        display: table-cell

        &.label
          font-weight: bold
