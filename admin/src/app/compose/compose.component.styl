@require '../../styles/palette'

.compose-article
  width: 90%
  height: 600px
  max-width: 1000px
  margin: 10px auto 0 auto
  background-color: white
  display: flex
  flex-direction: column

  .form
    display: table
    width: 100%
    border-spacing: 8px

    .field
      display: table-row

      .field-label
        display: table-cell
        width: 100px
        vertical-align: middle
        font-size: 1.2em

      input.field-input
        box-sizing: border-box

      .field-input
        display: table-cell
        width: 100%

