@require '../../styles/mixins'
@require '../../styles/palette'

.dashboard-component
  page()
  display: flex
  flex-direction: column
  font-size: 2em

  .dash-item
    flex-grow: 1
    cursor: pointer
    display: block
    margin: 10px
    height: 50px
    text-align: center
    text-decoration: none

    span
      display: block
      position: relative
      top: 50%
      transform: translateY(-50%)
