@require '../../styles/mixins'
@require '../../styles/palette'

.dashboard
  display: flex
  flex-direction: row
  padding: 10%
  font-size: 2em

  .dash-cell
    flex-grow: 1

    a
      display: block
      margin: auto
      background-color: var_colour_1
      width: 200px
      height: 150px
      text-align: center
      text-decoration: none
      color: var_colour_3
      box-shadow:  -10px -10px 0px 0px var_colour_3

      span
        display: block
        position: relative
        top: 50%
        transform: translateY(-50%)
