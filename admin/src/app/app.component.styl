@require '../styles/palette'

:host as-split.is-vertical ::ng-deep .as-split-gutter
  background-color: var_bg_col_2

.header
  background-color: var_bg_col_0
  color: var_fg_col_1
  line-height: 40px
  flex-grow: 0
  user-select: none
  border-radius: 0

  h1
    display: inline
    margin-top: 0
    margin-bottom: 0
    font-weight: normal
    cursor: pointer

  .btn-logout
    position: absolute
    top: 20px
    right: 10px

.wrap
  height: 100%
  font: 14px Helvetica, Arial, sans-serif
  background-color: rgba(0, 0, 0, 0.4)
  display: flex
  flex-direction: column

.footer
  min-height: 46px
  box-sizing: border-box
  flex-grow: 0
  background-color: var_bg_col_0
  color: var_fg_col_1
  text-align: center
  border-radius: 0