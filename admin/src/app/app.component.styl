@require '../styles/palette'

.header
  background-color: var_colour_3
  color: white
  line-height: 40px
  flex-grow: 0
  user-select: none

  h1
    display: inline
    margin-top: 0
    margin-bottom: 0
    font-weight: normal
    cursor: pointer

  .btn-logout
    position: absolute
    top: 20px
    right: 10px

.wrap
  height: 100%
  font: 14px Helvetica, Arial, sans-serif
  background-color: var_colour_0
  display: flex
  flex-direction: column

.middle
  flex-grow: 1

.footer
  min-height: 46px
  box-sizing: border-box
  flex-grow: 0
  background-color: var_colour_3
  color: white
  text-align: center
