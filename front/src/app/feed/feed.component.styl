@require '../../styles/palette'

.feed-component
  .feed-item
    margin-bottom: 20px
    cursor: pointer
    background-color: var_bg_col_1

    .tags-list
      float: right
      font-size: 0.9em

      .tag
        display: inline

        &:not(:first-child):before
          content: '\00B7'
          padding: 0 8px

    .item-title
      float: left
      margin: 0
      padding: 8px 0 0 0
      width: 100%

    .item-summary
      margin-top: 10px