@require '../styles/palette'

.wrap
  min-height: 100%
  font: 14px Helvetica, Arial, sans-serif
  background-color: rgba(0, 0, 0, 0.4)
  display: flex
  flex-direction: column

.middle
  flex-grow: 1

.footer
  min-height: 46px
  box-sizing: border-box
  flex-grow: 0
  background-color: var_bg_col_0
  color: var_fg_col_1
  text-align: center
  border-radius: 0
