@require '../styles/palette'

.wrap
  min-height: 100%
  font: 14px Helvetica, Arial, sans-serif
  background-color: var_colour_0
  display: flex
  flex-direction: column

.header
  background-color: var_colour_3
  color: white
  line-height: 40px
  flex-grow: 0
  cursor: pointer

  h1
    font-weight: normal

.middle
  padding: 20px
  flex-grow: 1

.footer
  flex-grow: 0
  background-color: var_colour_3
  color: white
  text-align: center
